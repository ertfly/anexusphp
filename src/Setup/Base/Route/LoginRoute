<?php

use Pecee\SimpleRouter\SimpleRouter;

$settings = [
    'prefix' => '{{prefix}}',
    'namespace' => '{{app}}\Modules\Account\Controllers',
    'middleware' => {{app}}\Modules\Middleware::class
];

SimpleRouter::group($settings, function () {
    SimpleRouter::get('/', 'AccountController@index')->setName('{{module}}Account');
    SimpleRouter::get('/login', 'AccountController@login')->setName('{{module}}AccountLogin');
    SimpleRouter::get('/login/validate', 'AccountController@loginSubmit')->setName('{{module}}AccountLoginSubmit');

    SimpleRouter::get('/logout', 'AccountController@logout')->setName('{{module}}AccountLogout');
});
